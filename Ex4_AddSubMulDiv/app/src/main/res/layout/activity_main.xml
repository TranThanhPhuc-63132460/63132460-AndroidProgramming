<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số thứ nhất"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/edtsomot"
            android:paddingLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập số">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số thứ hai"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/edtsohai"
            android:layout_marginLeft="10dp"
            android:paddingLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập số">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btncong"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="xulycong">

        </Button>
        <Button
            android:id="@+id/btntru"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="xulytru">

        </Button>
        <Button
            android:id="@+id/btnnhan"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:onClick="xulynhan">

        </Button>
        <Button
            android:id="@+id/btnchia"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="xulychia">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/edtkq"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>
</LinearLayout>
